- if group.errors.any?
  .chat-group-form__errors
    %h2
      = group.errors.count
      件のエラーが発生しました。
    %ul
      - group.errors.full_messages.each do |message|
        %li= message

.chat-group-form__field.clearfix
  .chat-group-form__field--left
    = f.label 'グループ名', class: 'chat-group-form__label'
  .chat-group-form__field--right
    = f.text_field :name, placeholder: 'グループ名を入力してください', class: 'chat-group-form__input', id: 'chat_group_name'


.chat-group-form__field.clearfix
  .chat-group-form__field--left
    = f.label 'チャットメンバーを追加', class: 'chat-group-form__label'
  .chat-group-form__field--right
    #addMember.chat-group-form__search.clearfix
      %input#user-input.chat-group-form__input{ type: "text", placeholder: "追加したいユーザー名を入力してください"}


.chat-group-form__field.clearfix
  .chat-group-form__field--left
    = f.label 'チャットメンバー', class: 'chat-group-form__label'
  #removeMember.chat-group-form__field--right
    #user-add-field.chat-group-form__search.clearfix
      = f.label current_user.nickname
      %input.chat-group-form__input{ name: "group[user_ids][]", type: "hidden", value: current_user.id }

.chat-group-form__field.clearfix
  .chat-group-form__field--right
    = f.submit 'Save', class: 'chat-group-form__action-btn'
