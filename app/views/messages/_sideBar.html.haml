#contents
  .sideBar
    .sideBar__menu
      .sideBar__menu__name
        = current_user.nickname
        = link_to edit_user_path(current_user), class: "icon" do
          %i.fa.fa-cog
        = link_to new_group_path, class: "icon" do
          %i.fa.fa-pencil-square-o

    .sideBar__group
      - @side_group_data.each do |group|
        = link_to group_messages_path(group), class: 'underline' do
          .sideBar__group__user
            .sideBar__group__user-name
              = group.name
            .sideBar__group__user-text
              - if group.messages.present?
                = group.messages.last.body
              -else
                メッセージがありません。
